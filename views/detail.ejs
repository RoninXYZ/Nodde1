<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>
                Detail Kontak
            </h2>
            
            <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    daftar kontak tidak ada <br/> <a href="/kontak" class="alert-link">kembali</a>. Give it a click if you like.
                  </div>
                  
                  
            <% }else{ %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %></h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %></h6>
                  <p class="card-text"><%= contact.email %></p>
                  <a href="/kontak/edit/<%= contact.nama %>" class="btn btn-info badge" > ubah</a>
                 <a href="/kontak/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('yakin?');"> hapus</a>
                 <br/> 
                 <a href="/kontak" class="card-link">kembali ke  kontak</a>
                  
                </div>
              </div>
        </div>
        <% } %> 
    </div>
</div>